<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cdkj.coin.dao.ITokenContractDAO">
	<resultMap id="tokenContract_DB_Result" type="tokenContract">
		<result column="symbol" property="symbol" />
		<result column="contract_address" property="contractAddress" />
		<result column="create_datetime" property="createDatetime" />
	</resultMap>
	<sql id="where_condition">
		<trim prefix="WHERE" prefixOverrides="AND | OR">
			<if test="symbol != null and symbol != '' ">
				AND t.symbol = #{symbol}
			</if>
			<if test="contractAddress != null and contractAddress != '' ">
				AND t.contract_address = #{contractAddress}
			</if>
		</trim>
	</sql>
	<select id="select_tokenContract" parameterType="tokenContract" resultMap="tokenContract_DB_Result">
		SELECT
		t.symbol
		,t.contract_address
		,t.create_datetime
		FROM
		tctq_token_contract t
		<include refid="where_condition" />
		<trim prefix="ORDER BY ">
			<if test="order != null and order != '' ">
				t.${order}
			</if>
		</trim>
	</select>

	<select id="select_tokenContract_count" parameterType="tokenContract"
		resultType="java.lang.Long">
		SELECT count(1) FROM tctq_token_contract t
		<include refid="where_condition" />
	</select>

	<insert id="insert_tokenContract" parameterType="tokenContract">
		INSERT INTO
		tctq_token_contract(
		symbol
		,contract_address
		,create_datetime
		)
		VALUES(
		#{symbol}
		,#{contractAddress}
		,#{createDatetime}
		)
	</insert>

</mapper>